{
  "name": "css-color-checker",
  "version": "1.4.0",
  "description": "Library for checking whether a value is a valid color value",
  "types": "./src/index.ts",
  "module": "./esm/index.js",
  "main": "./lib/index.js",
  "files": [
    "lib",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/PatrickShaw/css-color-checker.git"
  },
  "keywords": [
    "css",
    "color",
    "type",
    "check",
    "util",
    "helper",
    "string",
    "pattern",
    "typescript",
    "regex"
  ],
  "scripts": {
    "format": "prettier --write \"{**/,}*.{js,jsx,ts,tsx}\"",
    "test": "jest",
    "checker:types": "tsc -p .",
    "ci-test": "yarn test && codecov",
    "transpile": "babel src --extensions \".{ts,js}\" --source-maps",
    "build": "run-s build:*",
    "build:main": "yarn transpile --out-dir lib",
    "build:module": "yarn transpile --out-dir esm --env-name ESM",
    "build:gen-examples": "babel-node --extensions .ts,.js ./writeExampleMd.ts && git add EXAMPLES.md",
    "prepublish": "yarn build",
    "precommit": "lint-staged && yarn build:gen-examples"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn format",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/jest": "^23.3.7",
    "@types/node": "^10.12.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-plugin-istanbul": "^5.1.0",
    "codecov": "^3.1.0",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3",
    "typescript": "^3.1.3"
  },
  "engines": {
    "node": ">=6"
  }
}
