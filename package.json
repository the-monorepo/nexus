{
  "name": "monorepo",
  "description": "Extracts the types used in a particular object",
  "workspaces": [
    "packages/*",
    "build-packages/*"
  ],
  "private": true,
  "npmClient": "yarn",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/PatrickShaw/monorepo.git"
  },
  "scripts": {
    "format": "yarn format:lint && yarn format:prettier",
    "format:lint": "gulp format:lint",
    "format:prettier": "prettier --write \"{**/,}*.{js,jsx,ts,tsx}\"",
    "test": "yarn build && jest",
    "build": "gulp build",
    "watch": "gulp watch",
    "prepublish": "yarn build",
    "ci-test": "yarn test"
  },
  "keywords": [
    "typescript"
  ],
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0-beta.56",
    "@babel/preset-typescript": "^7.0.0-beta.56",
    "@storybook/core": "4.1.4",
    "@types/jest": "^23.3.10",
    "@types/mz": "^0.0.32",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.4.2",
    "babel-loader": "8.0.4",
    "babel-plugin-istanbul": "^5.1.0",
    "babel-plugin-module-resolver": "^3.1.0",
    "codecov": "^3.1.0",
    "colors": "^1.3.3",
    "gulp": "4",
    "gulp-babel": "8.0.0",
    "gulp-changed": "^3.2.0",
    "gulp-plumber": "^1.2.1",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-tslint": "^8.1.3",
    "gulp-typescript": "^5.0.0",
    "gulp-watch": "^5.0.1",
    "husky": "1.3.1",
    "jest": "^23.4.2",
    "jest-mock-functions": "^3.3.3",
    "lerna": "^3.8.0",
    "lint-staged": "^8.1.0",
    "mz": "^2.7.0",
    "prettier": "^1.15.3",
    "source-map-support": "^0.5.9",
    "through2": "^3.0.0",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.1",
    "webpack": "4.28.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn format:prettier",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged && yarn test && git add ."
    }
  }
}
