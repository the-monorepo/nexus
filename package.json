{
  "name": "monorepo",
  "description": "An assortment of miscellaneous libraries - Saves me time on rewriting build tooling",
  "workspaces": [
    "packages/*/*"
  ],
  "private": true,
  "npmClient": "yarn",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/the-monorepo/monorepo.git"
  },
  "scripts": {
    "run:buildplan": "yarn node --require=./transpile-at-runtime --require=./original-code-require-override buildplan.ts",
    "format": "yarn run:buildplan format",
    "format-staged": "yarn run:buildplan format-staged",
    "test": "yarn run:buildplan test",
    "clean": "yarn run:buildplan clean",
    "transpile": "yarn run:buildplan transpile",
    "build": "yarn run:buildplan build",
    "build-all": "yarn run:buildplan build-all",
    "watch": "yarn run:buildplan watch",
    "writeme": "yarn run:buildplan writeme",
    "webpack": "yarn run:buildplan webpack",
    "serve": "yarn run:buildplan serve",
    "serve:my-resume": "yarn run:buildplan serve --name='my-resume'",
    "serve:fault-benchmark": "yarn run:buildplan serve --name='fault-benchmark'",
    "serve:page-breaker": "yarn run:buildplan serve --name='page-breaker'",
    "serve:genetic-sequence-analysis-app": "yarn run:buildplan serve --name='genetic-sequence-analysis-app'",
    "precommit": "yarn run:buildplan precommit",
    "update-yarn": "yarn set version berry && yarn add @yarnpkg/pnpify --dev && yarn install && yarn update-pnpify",
    "update-pnpify": "yarn pnpify --sdk"
  },
  "keywords": [
    "typescript"
  ],
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/plugin-proposal-optional-chaining": "^7.11.0",
    "@babel/plugin-proposal-pipeline-operator": "^7.10.5",
    "@babel/plugin-syntax-jsx": "^7.10.4",
    "@babel/plugin-transform-strict-mode": "^7.10.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@babel/register": "^7.10.5",
    "@buildplan/core": "workspace:packages/buildplan/core",
    "@byexample/openapi": "workspace:packages/byexample/byexample-openapi",
    "@byexample/storybook-knobified": "workspace:packages/byexample/byexample-storybook-knobified",
    "@byexample/types": "workspace:packages/byexample/byexample-types",
    "@fault/addon-mutation-localization": "workspace:packages/faultjs/fault-addon-mutation-localization",
    "@fault/addon-sbfl": "workspace:packages/faultjs/fault-addon-sbfl",
    "@fault/runner": "workspace:packages/faultjs/fault-runner",
    "@fault/sbfl-dstar": "workspace:packages/faultjs/fault-sbfl-dstar",
    "@fault/tester-mocha": "workspace:packages/faultjs/fault-tester-mocha",
    "@monorepo/config": "workspace:packages/build-packages/monorepo-config",
    "@pipelines/core": "workspace:packages/pipelines/pipelines-core",
    "@pshaw/eslint-config-core": "workspace:packages/patrick-shaw/eslint-config-core",
    "@pshaw/eslint-config-preset": "workspace:packages/patrick-shaw/eslint-config-preset",
    "@pshaw/logger": "workspace:packages/misc/logger",
    "@pshaw/markdown-util": "workspace:packages/misc/markdown-util",
    "@storybook/addon-actions": "^5.3.19",
    "@storybook/addon-knobs": "^5.3.19",
    "@storybook/core": "^5.3.19",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.4",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "@writeme/core": "workspace:packages/writeme/writeme-core",
    "@yarnpkg/pnpify": "^2.1.0",
    "babel-plugin-istanbul": "^6.0.0",
    "chalk": "^3.0.0",
    "cinder": "workspace:packages/cinder/cinder",
    "codecov": "^3.6.1",
    "del": "^5.1.0",
    "eslint": "^7.0.0",
    "esm": "^3.2.25",
    "expect": "^25.1.0",
    "flamebearer": "^1.1.3",
    "globby": "^11.0.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-changed": "^4.0.2",
    "gulp-eslint": "^6.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-prettier": "^3.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-typescript": "^6.0.0-alpha.1",
    "husky": "^4.2.3",
    "jest-mock-functions": "workspace:packages/misc/jest-mock-functions",
    "lint-staged": "^10.2.10",
    "micromatch": "^4.0.2",
    "minimist": "^1.2.5",
    "mocha": "^7.2.0",
    "node-fetch": "^2.6.0",
    "plugin-error": "^1.0.1",
    "prettier": "^2.0.1",
    "rewiremock": "^3.14.2",
    "source-map-support": "^0.5.13",
    "stream-filter-glob": "workspace:packages/misc/stream-filter-glob",
    "stream-to-promise": "^2.2.0",
    "stylelint": "^13.3.3",
    "through2": "^3.0.0",
    "typescript": "^4.0.0-beta"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit && git add ."
    }
  }
}
