{
  "name": "monorepo",
  "description": "An assortment of miscellaneous libraries - Saves me time on rewriting build tooling",
  "workspaces": [
    "packages/*/*"
  ],
  "private": true,
  "npmClient": "yarn",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/the-monorepo/monorepo.git"
  },
  "scripts": {
    "node-base": "yarn node --require=./transpile-at-runtime.js --require=./original-code-require-override.ts",
    "run:buildplan": "yarn node-base buildplan.ts",
    "format": "yarn run:buildplan format",
    "format-staged": "yarn run:buildplan format-staged",
    "test": "yarn run:buildplan test",
    "clean": "yarn run:buildplan clean",
    "transpile": "yarn run:buildplan transpile",
    "build": "yarn run:buildplan build",
    "build-all": "yarn run:buildplan build-all",
    "watch": "yarn run:buildplan watch",
    "writeme": "yarn run:buildplan writeme",
    "webpack": "yarn run:buildplan webpack",
    "serve": "yarn run:buildplan serve",
    "serve:my-resume": "yarn run:buildplan serve --name='my-resume'",
    "serve:page-breaker": "yarn run:buildplan serve --name='page-breaker'",
    "serve:genetic-sequence-analysis-app": "yarn run:buildplan serve --name='genetic-sequence-analysis-app'",
    "serve:particle-sensor-app": "yarn run:buildplan serve --name='particle-sensor-app'",
    "serve:spot-welder-app": "yarn run:buildplan serve --name='spot-welder-app'",
    "precommit": "yarn run:buildplan precommit",
    "update-yarn": "yarn set version berry && yarn add @yarnpkg/pnpify --dev && yarn install && yarn pnpify --sdk",
    "create-ssl-certificate-osx": "openssl req -x509 -config localhost.cnf -new -nodes -keyout localhost.key -out localhost.crt"
  },
  "keywords": [
    "typescript"
  ],
  "husky": {
    "hooks": {}
  },
  "dependencies": {
    "@babel/core": "^7.13.15",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-decorators": "^7.13.15",
    "@babel/plugin-proposal-optional-chaining": "^7.13.12",
    "@babel/plugin-proposal-pipeline-operator": "^7.12.13",
    "@babel/plugin-syntax-jsx": "^7.12.13",
    "@babel/plugin-transform-strict-mode": "^7.12.13",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@babel/register": "^7.13.14",
    "@buildplan/core": "workspace:packages/buildplan/core",
    "@byexample/cli": "workspace:packages/byexample/byexample-cli",
    "@byexample/openapi": "workspace:packages/byexample/byexample-openapi",
    "@byexample/storybook-knobified": "workspace:packages/byexample/byexample-storybook-knobified",
    "@byexample/types": "workspace:packages/byexample/byexample-types",
    "@fault/addon-mutation-localization": "workspace:packages/faultjs/fault-addon-mutation-localization",
    "@fault/addon-sbfl": "workspace:packages/faultjs/fault-addon-sbfl",
    "@fault/runner": "workspace:packages/faultjs/fault-runner",
    "@fault/sbfl-dstar": "workspace:packages/faultjs/fault-sbfl-dstar",
    "@fault/tester-mocha": "workspace:packages/faultjs/fault-tester-mocha",
    "@fl-benchmarker/viewer-cli": "workspace:packages/fl-benchmarker/viewer-cli",
    "@monorepo/config": "workspace:packages/build-packages/monorepo-config",
    "@pipelines/core": "workspace:packages/pipelines/pipelines-core",
    "@pshaw/eslint-config-core": "workspace:packages/patrick-shaw/eslint-config-core",
    "@pshaw/eslint-config-preset": "workspace:packages/patrick-shaw/eslint-config-preset",
    "@pshaw/logger": "workspace:packages/misc/logger",
    "@pshaw/markdown-util": "workspace:packages/misc/markdown-util",
    "@pshaw/monorepo-config": "workspace:packages/patrick-shaw/monorepo-config",
    "@pshaw/webpack": "workspace:packages/patrick-shaw/webpack",
    "@storybook/addon-actions": "^6.0.16",
    "@storybook/addon-knobs": "^6.0.16",
    "@storybook/core": "^6.0.16",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.6.0",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "@writeme/core": "workspace:packages/writeme/writeme-core",
    "@yarnpkg/pnpify": "^3.0.0-rc.3",
    "babel-plugin-istanbul": "^6.0.0",
    "chalk": "^4.1.0",
    "cinder": "workspace:packages/cinder/cinder",
    "core-js": "^3.10.1",
    "del": "^5.1.0",
    "eslint": "^7.7.0",
    "eslint-plugin-react": "^7.20.6",
    "expect": "^26.4.1",
    "flamebearer": "^1.1.3",
    "globby": "^11.0.1",
    "gulp": "^4.0.2",
    "gulp-changed": "^4.0.2",
    "gulp-eslint": "^6.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-prettier": "^3.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-transform": "^3.0.5",
    "gulp-typescript": "^6.0.0-alpha.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "micromatch": "^4.0.2",
    "minimist": "^1.2.5",
    "mocha": "^8.1.1",
    "node-fetch": "^2.6.0",
    "plugin-error": "^1.0.1",
    "prettier": "^2.0.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rewiremock": "^3.14.3",
    "source-map-support": "^0.5.19",
    "stream-filter-glob": "workspace:packages/misc/stream-filter-glob",
    "stream-to-promise": "^3.0.0",
    "stylelint": "^13.6.1",
    "through2": "^4.0.2",
    "typescript": "^4.2.4",
    "vinyl-sourcemaps-apply": "^0.2.1"
  }
}
