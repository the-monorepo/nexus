{
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,
    "pretty": true,
    "target": "esnext",
    "module": "NodeNext",
    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "NodeNext",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "jsx": "preserve",
    "resolveJsonModule": false,
    "lib": ["esnext", "dom"],
    "isolatedModules": true,
    "declaration": true,
    "allowImportingTsExtensions": true,
    "declarationMap": true,
    "sourceMap": true,
  },
  "typings": ["./global.d.ts"],
  "exclude": [
    "**/.yarn/**",
    "**/node_modules",
    "**/build",
    "**/commonjs",
    "**/esm",
    "**/dist"
  ]
}
