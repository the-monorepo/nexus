{
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,
    "pretty": true,
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["esnext", "dom"]
  },
  "exclude": [
    "**/.yarn/**",
    "**/node_modules",
    "**/build",
    "**/lib",
    "**/esm", 
    "**/dist"
  ]
}