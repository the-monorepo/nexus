{
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,
    "pretty": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "baseUrl": "./",
  },
  "exclude": [
    "node_modules", 
    "**/node_modules",
    "build",
    "lib", 
    "dist"
  ]
}
