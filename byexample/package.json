{
  "name": "byexample",
  "description": "Extracts the types used in a particular object",
  "workspaces": [
    "packages/*",
    "build-packages/*"
  ],
  "private": true,
  "author": "Patrick Shaw <mail@patrickshaw.me>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/PatrickShaw/byexample.git"
  },
  "scripts": {
    "format": "prettier --write \"{**/,}*.{js,jsx,ts,tsx}\"",
    "test": "yarn build && jest",
    "build": "gulp build",
    "watch": "gulp watch",
    "prepublish": "yarn build",
    "ci-test": "yarn test"
  },
  "keywords": [
    "types"
  ],
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0-beta.56",
    "@babel/preset-typescript": "^7.0.0-beta.56",
    "@types/jest": "^23.3.11",
    "@types/mz": "^0.0.32",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.4.2",
    "babel-plugin-istanbul": "^5.1.0",
    "codecov": "^3.1.0",
    "colors": "^1.3.3",
    "gulp": "4",
    "gulp-babel": "8.0.0",
    "gulp-changed": "^3.2.0",
    "gulp-plumber": "^1.2.1",
    "gulp-sourcemaps": "^2.6.4",
    "husky": "1.3.1",
    "jest": "^23.4.2",
    "jest-mock-functions": "^3.3.4",
    "lerna": "^3.8.5",
    "lint-staged": "^8.1.0",
    "mz": "^2.7.0",
    "prettier": "^1.15.3",
    "through2": "^3.0.0",
    "typescript": "^3.2.2",
    "webpack": "4.28.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn format",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged && yarn test"
    }
  }
}
