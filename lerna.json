{
  "lerna": "3.2.1",
  "version": "independent",
  "changelog": {
    "repo": "PatrickShaw/monorepo",
    "cacheDir": ".changelog"
  },
  "packages": [
    "build-packages/*",
    "packages/*"
  ],
  "npmClient": "yarn",
  "npmClientArgs": [
    "--no-lockfile"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        "test/**"
      ]
    }
  }
}
