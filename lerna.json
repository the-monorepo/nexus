{
  "lerna": "3.2.1",
  "version": "independent",
  "changelog": {
    "repo": "PatrickShaw/monorepo",
    "cacheDir": ".changelog"
  },
  "packages": [
    "build-packages/*",
    "misc/*",
    "faultjs/*"
  ],
  "npmClient": "yarn",
  "npmClientArgs": [
    "--frozen-lockfile"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        "test/**",
        "examples/**"
      ]
    }
  }
}
